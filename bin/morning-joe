#! /usr/bin/env bash
# Update applications/packages and install new ones we've added to the Brewfile

set -e

# Update Homebrew
echo "Updating Homebrew"
brew update

# Identify outdated Homebrew packages
echo "Listing outdated brews"
brew outdated

# Use Brewfile to install new packages and perform upgrades
echo "Checking for new Brewfile packages and performing updates"
brew bundle --file ~/.Brewfile

# Upgrade spacemacs to latest version
echo "Upgrading spacemacs"
cd ~/.emacs.d && git pull
cd $HOME

# End
echo "Upgrades complete. Have a nice days!"

# The End